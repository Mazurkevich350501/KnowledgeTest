@model KnowledgeTest.BLL.Model.Test.EditTestModel

<h2>@(Model.Name == null ? "Create Test" : "Edit Test")</h2>

<form class="form-horizontal" method="post" action=@Url.Action("Save", "TestManage") enctype="multipart/form-data">
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Settings.TimeLimit, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Settings.TimeLimit, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Settings.IsShowResults, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.Settings.IsShowResults)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Settings.IsLimitedTime, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.Settings.IsLimitedTime)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Settings.IsSpendingTimeShow, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.Settings.IsSpendingTimeShow, new {@class = "checkbox"})
        </div>
    </div>
    <button type="submit" class="btn btn-success">@(Model.Name == null ? "Create" : "Save")</button>
</form>